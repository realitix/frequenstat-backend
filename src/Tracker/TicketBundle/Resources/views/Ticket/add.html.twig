{% extends "TrackerTicketBundle::layout.html.twig" %}

{% block breadcrumb %}
	<li><a href="{{ path('tracker_page_dashboard') }}">{{ 'Accueil'|trans }}</a></li>
	<li><a href="{{ path('tracker_ticket_ticket_index') }}">{{ 'Tickets'|trans }}</a></li>
	<li>{{ 'Ouverture'|trans }}</li>
{% endblock %}

{% block ticket_body %}
<div id="content">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
			<h1 class="page-title txt-color-blueDark"><i class="fa-fw fa fa-table"></i> {{ 'Tickets'|trans }} </span></h1>
		</div>
	</div>
	
	<section id="widget-grid" class="">
		<div class="row">
			<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<div class="jarviswidget">
					<header>
						<span class="widget-icon"><i class="fa fa-edit"></i></span>
						<h2>Ouverture d'un ticket</h2>
					</header>
					<div>
    					<div class="widget-body no-padding">
                            {% if not form.vars.valid %}
                                <div class="alert alert-danger">
                                    <button class="close"> x </button>
                                    <i class="fa-fw fa fa-times"></i>
                                    <strong>Une erreur est survenue!</strong>
                                    {{ form_errors(form) }}
                                </div>
                            {% endif %}
                            <form class="smart-form" method="post">
                                <fieldset>
                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="input">
                                                <i class="icon-prepend fa fa-tag"></i>
                                                {{ form_widget(form.name) }}
                                            </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="select"> 
                                                {{ form_widget(form.type) }}
                                                <i></i>
                                            </label>
                                        </section>
                                    </div>
                                    <section>
                                        <label class="textarea">
                                            <i class="icon-append fa fa-comment"></i>
                                            {{ form_widget(form.description) }}
                                        </label>
                                    </section>
                                </fieldset>
                                
                                {{ form_rest(form) }}
                                
                                <footer>
                                    <button class="btn btn-primary" type="submit">Valider</button>
                                </footer>
                            </form>
                        </div>
                    </div>
				</div>
			</article>
		</div>
	</section>
</div>
{% endblock %}