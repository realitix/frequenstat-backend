{% extends "::layout_clean.html.twig" %}

{% block body %}
{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 col-md-offset-4 alert alert-danger fade in">
			<i class="fa-fw fa fa-times"></i>
			<strong>Erreur : </strong>
			Adresse Email ou mot de passe invalide.
		</div>
	</div>
{% endif %}

<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 col-md-offset-4">
		<div class="well no-padding">
			<form action="{{ path("fos_user_security_check") }}" method="POST" id="login-form" class="smart-form client-form">
				<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
				
				<header>
					Connexion
				</header>

				<fieldset>
					
					<section>
						<label class="label">E-mail</label>
						<label class="input"> <i class="icon-append fa fa-user"></i>
							<input type="email" name="_username" value="{{ last_username }}" required="required">
							<b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Entrez votre adresse email</b></label>
					</section>

					<section>
						<label class="label">Mot de passe</label>
						<label class="input"> <i class="icon-append fa fa-lock"></i>
							<input type="password" name="_password" required="required">
							<b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Entrez votre mot de passe</b> </label>
						<div class="note">
							<a href="{{path('fos_user_resetting_request')}}">Mot de passe oublié ?</a>
						</div>
					</section>

					<section>
						<label class="checkbox">
							<input type="checkbox" name="_remember_me" checked="" value="on">
							<i></i>Rester connecté</label>
					</section>
				</fieldset>
				<footer>
					<button type="submit" name="_submit" class="btn btn-primary">
						Valider
					</button>
				</footer>
			</form>
		</div>
	</div>
</div>

{% endblock %}